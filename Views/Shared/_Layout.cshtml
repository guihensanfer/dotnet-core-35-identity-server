                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark fundo-arredondado" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Finanças & Investimentos
                            </a>
                            <ul class="dropdown-menu dropdown-menu-bomdev" aria-labelledby="navbarDropdownMenuLink">                            
                                <li>
                                    <div class="dropdown-item-bomdev">                                                     
                                        <a class="text-dark" href="#">
                                            Controle de despesas pessoais                                                    
                                            <p class="text-descricao-P text-dark">
                                                Organização de pendências financeiras  pessoais. 
                                            </p>                                            
                                        </a>                                                       
                                    </div>                                                                                                                     
                                </li>                                                                
                                @* <div class="dropdown-divider"></div> *@
                                @* <li class="dropdown-submenu"><a class="dropdown-item dropdown-toggle" href="#">Desenvolvimento sob demanda</a>
                                    <ul class="dropdown-menu">                                    
                                        <div class="dropdown-item-bomdev">                                                     
                                            <a class="text-dark" href="#">
                                                Desenvolvimento de sistemas webs dedicados                                               
                                                <p class="text-descricao-P text-dark">
                                                    Deseja padronizar processos? Ou disponibilizar informações via Web API? Podemos lhe ajudar com o serviço de desenvolvimento da idéia.
                                                </p>
                                                <span class="link-destacado text-descricao-M">Saiba mais</span>
                                            </a>                                                       
                                        </div>                                        
                                    </ul>
                                </li> *@
                            </ul>                            
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fundo-arredondado" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre nós</a>
                        </li>
                    </ul>
                </div>
            </div>            
        </nav>        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2020 - Bom Dev - <a asp-area="" asp-controller="Home" asp-action="Sobre">Sobre nós</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
