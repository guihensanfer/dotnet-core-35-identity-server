                <li>@Localizer["personalDataUsesP2"]</li>
                <li>@Localizer["personalDataUsesP3"]</li>
                <li>@Localizer["personalDataUsesP4"]</li>
            </ol>
            <h5 class="text-dark m-t-2p" id="dataSafe">@Localizer["dataSafeTitle"]</h5>
            <p>@Localizer["dataSafeP1"]</p>
            <h5 class="text-dark" id="dataShared">@Localizer["dataSharedTitle"]</h5>
            <p>
                @Localizer["dataSharedP1"]
            </p>
            <h5 class="text-dark m-t-2p" id="dataGet">@Localizer["dataGetTitle"]</h5>
            <p>
                @Localizer["dataGetP1"]
            </p>
            <h5 class="text-dark m-t-2p" id="rights">@Localizer["rightsTitle"]</h5>
            <p>
                @Localizer["rightsP1"]
            </p>
            <h5 class="text-dark m-t-2p" id="privacyChanges">@Localizer["privacyChangesTitle"]</h5>
            <p>
                @Localizer["privacyChangesP1"]
            </p>
            <h5 class="text-dark m-t-2p" id="contactUs">@Localizer["contactUsTitle"]</h5>
            <p>
                @Localizer["contactUsP1"]
                <a asp-action="About" asp-controller="home">@Localizer["contactUsTitle"]</a>
            </p>
        </div>
    </div>
</div>