@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastrar-se";
}
<div class="row">    
    <div class="col-md-12 col-md-offset-2">
        <section>
            <div id="divContinuarOutrosProvedores" style="margin-left: 25%;margin-right: 25%;border-bottom: dashed 2px #DCDCDC;padding-top: 10px;padding-bottom: 10px;">
                <h4 class="text-dark">J&aacute; possui uma conta?</h4>                            
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        <p>
                            <button type="submit" class="btn btn-primary" name="provider" value="@Bom_Dev.Startup.IdentityServerScheme" title="Logar usando uma conta Bom Terrários ou outras contas.">Clique aqui para logar</button>
                        </p>
                    </div>
                </form>                            
            </div>        
        </section>
    </div>
    <div class="col-md-12">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div id="divCadastroBomDev" style="margin-left: 25%;margin-right: 25%;padding-bottom:5%;padding-top:5%;">
                <div class="row">
                    <div class="col-md-12">
                        <h4 class="text-dark">Criar uma nova conta</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="text-dark" asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="form-group">
                            <label class="text-dark" asp-for="Input.Nome"></label>
                            <input asp-for="Input.Nome" class="form-control" />
                            <span asp-validation-for="Input.Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="text-dark" asp-for="Input.PhoneNumber"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12" style="margin-top:7%;">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="text-dark" asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="text-dark" asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>                                                                            
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>            
        </form>
    </div>    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        @@media (max-width: 580px) {  
            #divCadastroBomDev{margin:0px!important;}
            #divContinuarOutrosProvedores{margin:0px!important;}
        }
    </style>
}
