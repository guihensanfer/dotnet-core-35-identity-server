@model IEnumerable<Data.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
    <a asp-area="Adm" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            bool flagBold = true;
            foreach (var item in Model)
            {                
                if (item.Order == Data.Models.Category.OrderView.First)
                {
                    flagBold = !flagBold;

                    <tr class="spacer"></tr>
                }


                <tr>
                    <td>
                        @if (flagBold)
                        {
                            <strong>@Html.DisplayFor(modelItem => item.Path)</strong>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Path)
                        }

                    </td>
                    <td>
                        @if (flagBold)
                        {
                            <strong>@Html.DisplayFor(modelItem => item.Order)</strong>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Order)
                        }
                    </td>
                    <td>
                        @if (flagBold)
                        {
                            <strong>@Html.DisplayFor(modelItem => item.DateCreated)</strong>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        }
                    </td>
                    <td>
                        <a asp-area="adm" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                        <a asp-area="adm" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                        <a asp-area="adm" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                    </td>
                </tr>                
          }

        }

    </tbody>
</table>
