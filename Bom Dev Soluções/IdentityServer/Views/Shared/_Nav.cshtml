@using IdentityServer4.Extensions
@using IdentityServer.Quickstart
@inject BomDevAppSettingsUtil _util

@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}

<div class="nav-page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-light menuNav">
        <div class="container">
            <a id="layoutLogo" class="navbar-brand" href="@_util.homeURL" title="Bom Dev">

            </a>

            @if (!string.IsNullOrWhiteSpace(name))
            {
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">@name <b class="caret"></b></a>

                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
                        </div>
                    </li>
                </ul>
            }

            <div class="navbar d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link link-destacado text-descricao-P" href="@_util.registerURL" title="Registrar-se">Registrar-se</a>
                    </li>
                </ul>
            </div>
        </div>
</nav>
</div>
